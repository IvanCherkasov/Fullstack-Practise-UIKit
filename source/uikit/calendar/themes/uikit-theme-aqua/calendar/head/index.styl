.uikit-theme-aqua
    .uikitCalendar
        &__year
            position absolute
            right 0
            margin 0.4167rem
            font-family: Lato
            font-size: 1rem
            opacity: 0
            transition: opacity 0.2s
            font-weight: 200
            color white
            cursor: default

            &-show
                opacity 1

        &__header
            height 12.6667rem
            width: 100%
            background-color: #e75735
            display flex
            flex-direction: column
            justify-content: space-between
            position: relative

        &__monthSwitcher
            background-color: #d54c2c
            height 3.5833rem
            width: 100%
            display flex
            justify-content: space-between
            align-items: center

        &__previousMonthButton
            width 1.6667rem
            height 100%
            background-image: url('./Arrow Left.png')
            background-repeat: no-repeat
            background-position: center center
            margin-left 1.1667rem
            cursor: pointer

        &__nextMonthButton
            width 1.6667rem
            height 100%
            background-image: url('./Arrow Right.png')
            background-repeat: no-repeat
            background-position: center center
            margin-right 1.1667rem
            cursor: pointer

        &__monthFullName
            font-family: Lato
            color white
            font-size: 2rem
            font-weight: 200
            text-align: center
            cursor: default

        &__currentDay
            font-family: Lato
            color white
            font-size: 6.6667rem
            font-weight: 200
            text-align: center
            padding-top 0.8333rem
            cursor: default


