.uikit-theme-aqua
    .uikit
        &.uikit-input-textarea
            textarea
                position relative
                background-color #e5e5e5
                border none
                border-radius 0.25rem
                color #888
                font-size 1.1667rem
                font-family Source Sans Pro
                font-weight 400
                letter-spacing 0.0117rem
                text-align left
                padding 0.5rem 1rem
                box-sizing border-box 
                flex 2

            textarea:focus
                outline none

            textarea[data-resizeble="true"]
                resize both

            textarea[data-resizeble="false"]
                resize none

        &.uikit-input-textarea[data-variant='regular']
            width 25rem
            height 12.5rem

            textarea
                width inherit
                height inherit

        &.uikit-input-textarea[data-variant='fullsize']
            width 100%
            height 100%

            textarea
                width 100%
                height 100%
        
        &.uikit-input-textarea[data-variant='none']
            width auto
            height auto