.uikit-theme-aqua
    .uikit
        &.uikit-input-dropdown
            .uikit-input-dropdown-container
                position relative
                display flex
                align-items center
                flex-direction column
                width 100%

                .uikit-input-dropdown-caption
                    position relative
                    width 100%
                    height 28px
                    background-color #e5e5e5
                    border-top-left-radius 3px
                    border-bottom-left-radius 3px
                    display flex
                    align-items center

                    span
                        color #888
                        font-size 14px
                        font-family Lato
                        padding 0 13px

                .uikit-dropdown-lis-container
                    position absolute
                    top 32px
                    width 100%
                    z-index 999
                    background-color #e5e5e5
                    border-radius 3px
                    overflow hidden

                    li
                        list-style none
                        cursor: pointer
                        transition: 0.2s

                        .uikit-dropdown-li-caption
                            padding 6px 13px
                            color #888
                            font-family Lato
                            font-size 14px

                    li:hover
                        background-color #4EB7A8

                        .uikit-dropdown-li-caption
                            color white

            &[data-block-visible="false"]
                .uikit-input-dropdown-container
                    .uikit-dropdown-lis-container
                        display none
