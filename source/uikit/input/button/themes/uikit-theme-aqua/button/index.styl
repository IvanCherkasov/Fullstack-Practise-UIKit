.uikit-theme-aqua
    .uikit
        &.uikit-button
            position relative
            display flex
            flex-direction column
            justify-content center
            height 100%
            background-color white
            border 1px solid #4EB7A8
            border-radius 3px
            box-shadow 0 3px 0px 0px #4EB7A8
            color #4EB7A8
            cursor pointer
            overflow hidden
            transition 0.2s

            input
                display none

            &:hover
                box-shadow 0 3px 0px 0px #28a290
                background-color #4EB7A8
                color white

            &:active
                box-shadow 0 0px 0px 0px #4EB7A8

            &[data-variant$="error"]
                border 1px solid #e75735
                box-shadow 0 3px 0px 0px #e75735
                color #e75735

            &[data-variant$="error"]:hover
                box-shadow 0 3px 0px 0px #bf3e1f
                background-color #e75735
                color white

            &[data-variant$="error"]:active
                box-shadow 0 0px 0px 0px #e75735

            &[data-variant^="regular"]
                width 80px
                height 28px

            &[data-variant^="event"]
                width 128px
                height 22px
                border-radius 4px
                border none

                .uikit-button-caption
                    font-size: 10px
                    text-align: center
                    font-weight: bold

            &[data-variant="event.aqua"]
                width 128px
                height 22px
                box-shadow 0 3px 0px 0px #28a290
                border-radius 4px
                border none

                &:hover
                    background-color #28a290
                    box-shadow 0 3px 0px 0px #227569
                
                &:active
                    box-shadow 0 0px 0px 0px #28a290

                .uikit-button-caption
                    font-size: 10px
                    text-align: center
                    font-weight: bold

            &[data-variant="event.orangered"]
                width 128px
                height 22px
                box-shadow 0 3px 0px 0px #bf3e1f
                border-radius 4px
                border none

                &:hover
                    background-color #bf3e1f
                    box-shadow 0 3px 0px 0px #9c2c16
                
                &:active
                    box-shadow 0 0px 0px 0px #bf3e1f

                .uikit-button-caption
                    font-size: 10px
                    text-align: center
                    font-weight: bold

