.uikit-theme-aqua
    .uikit
        &.uikit-toggle
            position relative
            display flex
            background-color #4EB7A8
            transition 0.2s

            input
                display none

            .left-dummy
                position absolute
                width 2rem
                height 2rem
                background-color #4EB7A8
                border-radius 50%
                transition background-color 0.2s

            .right-dummy
                position absolute
                width 2rem
                height 2rem
                background-color  #4EB7A8
                border-radius 50%
                transition background-color 0.2s

            .text-left
                display flex
                position absolute
                color white
                font-family Lato
                font-weight bold
                font-size 1rem
                transition opacity 0.2s
                z-index 1
                cursor default

            .text-right
                display flex
                position absolute
                color white
                font-family Lato
                font-weight bold
                font-size 1rem
                transition opacity 0.2s
                z-index 1
                cursor default

            &[data-text-enabled="false"]
                .text-right
                .text-left
                    display none

            &[data-orientation='vertical']
                height 3rem
                width 2rem
                justify-content center
                margin 1rem 0

                .left-dummy
                    top -1rem

                .right-dummy
                    bottom -1rem

                .text-left
                    display none

                .text-right
                    display none

            &[data-orientation='horizontal']
                height 2rem
                width 3rem
                align-items center
                margin 0 1rem

                .left-dummy
                    left -1rem

                .right-dummy
                    right -1rem

                .text-left
                    left 0
                    height 2rem
                    align-items center

                .text-right
                    right 0
                    height 2rem
                    align-items center

        &.uikit-toggle

            &[data-checked='true']
                background-color #4EB7A8

                .left-dummy
                .right-dummy
                    background-color #4EB7A8

                .text-left
                    opacity 1

                .text-right
                    opacity 0

            &[data-checked='false']
                background-color #e5e5e5

                .left-dummy
                .right-dummy
                    background-color #e5e5e5

                .text-left
                    opacity 0

                .text-right
                    opacity 1
