.uikit-theme-aqua
    .uikit
        &.uikit-profile-bar
            .uikit-profile-bar-info
                .uikit-profile-bar-person
                    display flex
                    flex-direction: column
                    justify-content: center

                    .uikit-profile-bar-name
                        font-family Lato
                        font-size: 18px
                        text-align: center
                        font-weight: 300

                    .uikit-profile-bar-occupation
                        font-size 11px
                        font-weight: 800
                        text-align: center
                        font-family: Lato
                        text-transform: uppercase
                        letter-spacing: 0.5px

            &[data-variant="orangered"]
                .uikit-profile-bar-info
                    .uikit-profile-bar-person
                        .uikit-profile-bar-name
                            color #e75735
                    
                        .uikit-profile-bar-occupation
                            color #4f4f4f

            &[data-variant="aqua"]
                .uikit-profile-bar-info
                    .uikit-profile-bar-person
                        .uikit-profile-bar-name
                            color white
                    
                        .uikit-profile-bar-occupation
                            color white
                    