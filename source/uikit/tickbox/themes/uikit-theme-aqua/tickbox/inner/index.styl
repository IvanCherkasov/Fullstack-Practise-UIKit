.uikit-theme-aqua
    .uikit
        &.uikit-tickbox
            .uikit-tickbox-inner
                position relative
                height inherit
                width inherit
                background-color #c0c0c0
                background-image url('./tickbox_check.svg')
                background-repeat no-repeat
                background-size 61%
                mask url('./tickbox_check.svg') no-repeat
                mask-size 61%
                mask-position center
                -webkit-mask url('./tickbox_check.svg') no-repeat
                -webkit-mask-size 61%
                -webkit-mask-position center
                mask-image url('./tickbox_check.svg')
                -webkit-mask-image url('./tickbox_check.svg')

            &[data-checked="true"]
                .uikit-tickbox-inner
                    background-color white