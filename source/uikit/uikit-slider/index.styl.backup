.uikit-slider
	position relative
	width auto
	height auto
	margin 0 10px
	display flex
	flex-direction column
	justify-content center
	align-items center
	cursor pointer
	
	.uikit-slider-track
		position relative
		height 21px
		width 100%
		display flex
		align-items center
		
		.uikit-slider-thumb
			position absolute
			height inherit
			left 0
			display flex
			justify-content center
			top 0
			bottom 0
			
			.circle
				position absolute
				width 21px
				height 21px
				background-color #e75735
				border-radius 50%
				left -10.5px

			.uikit-slider-thumb-upper
				position absolute
				height 23px
				border-radius 5px
				background-color #e75735
				bottom 31px
				display flex
				justify-content center
				align-items center
				flex-direction column
				pointer-events none
				opacity 0
				transition opacity 0.2s
				
				div
					color white
					font-family Lato
					font-size 13px
					font-weight bold
					text-align center
					padding 10px
					margin-top 3px

			.uikit-slider-thumb-upper::before
				position absolute
				content ""
				width 7px
				height 7px
				background-color #e75735
				border-radius 0 0 2px 0
				transform rotate(45deg)
				bottom -3px
				right 0
				left 0
				margin auto
				
		.uikit-slider-thumb
			.uikit-slider-thumb-upper.show
				opacity 1
				
		.uikit-slider-thumb.horizontal
			top 0
			bottom 0
			height inherit
			
		.uikit-slider-thumb.vertical
			left 0
			right 0
			width inherit
			
				
		.uikit-slider-track-upper
			position absolute
			height 21px
			bottom 23px
			left 100px
			pointer-events none
			border-radius 5px
			border 1px dashed #e75735
			display flex
			justify-content center
			align-items center
			flex-direction column
			background-color white
			opacity 0
			transition opacity 0.2s
			
			div
				color #e75735
				font-family Lato
				font-size 13px
				font-weight bold
				text-align center
				padding 10px
				margin-top 3px
				z-index 1
				
		.uikit-slider-track-upper::before
			position absolute
			content ""
			height 7px
			width 7px
			background-color white
			border 1px dashed #e75735
			border-left none
			border-top none
			border-radius 0 0 2px 0
			transform rotate(45deg)
			bottom -4px
			z-index -1
			left 0
			right 0
			margin auto
			
		.uikit-slider-track-upper::after
			position absolute
			content ""
			height 6px
			width 6px
			background-color white
			border-radius 0 0 2px 0
			transform rotate(45deg)
			bottom -3px
			left 0
			right 0
			margin auto
			
	.uikit-slider-fill
		position relative
		width 100%
		height 5px
		background-color #e5e5e5
		border-radius 3px
		overflow hidden
		
		.uikit-slider-filled
			position relative
			height inherit
			background-color #e75735
			
	.uikit-slider-track.hover
		.uikit-slider-track-upper
			opacity 1
			
	.uikit-slider-track.horizontal
		height 21px
		width 100%
		
	.uikit-slider-track.vertical
		width 21px 
		height 100%
			
	.uikit-slider-rule
		width 100%
		position relative
		display table
		cursor default
		margin-top 3px
			
		div
			position relative
			font-family Lato
			font-size 11px
			color #d1d1d1
			font-weight bold
			text-align center
			cursor pointer
			
		div:hover
			color #e75735
