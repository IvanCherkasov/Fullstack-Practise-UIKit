.uikit-theme-sea
    .uikit
        &.uikit-arrow-button
            position relative
            width 42px
            height 42px
            background-color white
            border 3px solid #255da9
            border-radius 3px
            cursor pointer
            transition background-color 0.2s

            &[data-type="right"]::before
                content ""
                position absolute
                background-color #255da9
                width 18px
                height 4px
                top 24px
                left 14px
                transform rotate(-45deg)
                transition background-color 0.2s

            &[data-type="right"]::after
                content ""
                position absolute
                background-color #255da9
                width 18px
                height 4px
                top 14px
                left 14px
                transform rotate(45deg)
                transition background-color 0.2s

            &[data-type="left"]
                transform scale(-1, 1)

            &[data-type="left"]::before
                content ""
                position absolute
                background-color #255da9
                width 18px
                height 4px
                top 24px
                left 14px
                transform rotate(-45deg)
                transition background-color 0.2s

            &[data-type="left"]::after
                content ""
                position absolute
                background-color #255da9
                width 18px
                height 4px
                top 14px
                left 14px
                transform rotate(45deg)
                transition background-color 0.2s

            &[data-enabled="true"]:hover
                background-color #255da9

            &[data-enabled="true"]:hover.uikit-arrow-button::after
            &[data-enabled="true"]:hover.uikit-arrow-button::before
                background-color white

            &[data-enabled="false"]
                background-color #e4e4e4
                border-color #e4e4e4
                cursor default

                &::after
                &::before
                    background-color white !important
                    cursor default !important
