.uikit-theme-sea
    .uikit
        &.uikit-button
            background-color white
            border 1px solid #255da9
            border-radius 3px
            height 100%
            box-shadow 0 3px 0px 0px #255da9
            color #255da9

            &:hover
                box-shadow 0 3px 0px 0px #255da9
                background-color #255da9
                color white

            &:active
                box-shadow 0 0px 0px 0px #255da9
