.uikit-theme-aqua
    .uikit
        &.uikit-video-player
            .uikit-video-player-controls
                .uikit-video-player-range
                    position: relative
                    display flex
                    justify-content: space-between
                    align-items: center
                    box-sizing: border-box

                    .duration
                    .current-time
                        display flex
                        justify-content: center
                        align-items: center
                        width: 78px
                        height: 48px
                        color white
                        text-align: center
                        font-family Lato
                        font-size 11px
                        font-weight: 200
                        letter-spacing: 1px
                        cursor default

                    .range
                        flex 1
                        height 48px
                        display flex
                        align-items: center

                        .track
                            display flex
                            align-items: center
                            height 11px
                            width: 100%
                            cursor: pointer
                            position: relative

                            .filler
                                height 5px
                                width: 100%
                                background-color: #e5e5e5
                                border-radius: 3px
                                display flex
                                align-items: center
                                justify-content: flex-start

                                .filled
                                    border-radius: 3px
                                    height 100%
                                    background-color: #e75735

                            .upper
                                position: absolute
                                width: auto
                                display flex
                                justify-content: center
                                align-items: center
                                pointer-events: none
                                transition: opacity 0.2s, width 0.2s
                                background-color: #111
                                color white
                                font-size 11px
                                font-weight: 200
                                font-family: Lato
                                letter-spacing: 1px
                                opacity: 0
                                border-radius: 2px
                                bottom 22px
                                transform: translateX(-50%)

                                div
                                    padding: 3px 10px
                                    margin-top: 1px

                                &[data-show="true"]
                                    opacity 1