.uikit-theme-aqua
    .uikit
        &.uikit-video-player
            .uikit-video-player-controls
                .uikit-video-player-sound
                    width 30px
                    height 48px
                    margin 0 2px
                    position: relative

                    .sound-box
                        position: absolute
                        height: 150px
                        width: inherit 
                        top 0
                        display flex
                        flex-direction: column
                        transition top 0.2s
                        border-top-left-radius: 2px
                        border-top-right-radius: 2px
                        overflow hidden

                        .pic
                            height 48px
                            width inherit
                            background-image: url('./speaker.png')
                            background-repeat: no-repeat
                            background-position: center center
                            background-size: 19px
                            background-color: #e75735

                        .sound-range
                            background-color: #111
                            display flex
                            align-items: center
                            justify-content: center
                            flex 1
                            box-sizing: border-box
                            padding 7px 0

                            .sound-track
                                width 9px
                                cursor: pointer
                                height: 100%
                                display flex
                                justify-content: center

                                .sound-filler
                                    height 100%
                                    width 4px
                                    background-color: #e5e5e5
                                    display: flex
                                    flex-direction: column-reverse
                                    border-radius: 3px
                                    
                                    .sound-filled
                                        border-radius: 3px
                                        width 100%
                                        background-color: #e75735

                    &:hover
                        .sound-box
                            top -102px

