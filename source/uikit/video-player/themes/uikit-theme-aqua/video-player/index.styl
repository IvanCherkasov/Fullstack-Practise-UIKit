.uikit-theme-aqua
    .uikit
        &.uikit-video-player
            display flex
            flex-direction: column
            justify-content: space-between
            position: absolute
            width: 100%
            height: 100%
            border-radius: 0.25rem
            overflow hidden
            top 0
            left 0

            .mask
                position: absolute
                top 0
                left 0
                width: 100%
                height: 100%
                background-color rgba(0,0,0,0.75)

                video
                    position: absolute
                    width: 100%
                    height: 100%
                    border-radius: 0.25rem
                    background-color black
                    z-index: -1

            .uikit-video-player-title
                color white
                font-family: Lato
                box-sizing: border-box
                z-index: 1
                padding 2.8333rem
                cursor: default

                .uikit-video-player-name
                    font-size: 3rem
                    font-weight: 200
                    text-align: left

                .uikit-video-player-author
                    font-size: 1rem
                    font-weight: bold
                    text-align: left
                    text-transform: uppercase
                    letter-spacing: 0.125rem
                    word-spacing: 0.0833rem

                .uikit-video-player-link
                    font-size: 1.5rem
                    font-weight: 300
                    text-align: left
                    letter-spacing: 0.0833rem
                    margin: 1.9167rem 0

            &[data-playing="true"]
                .mask
                    background-color: rgba(0,0,0,0)

                .uikit-video-player-title
                    opacity: 0
                    pointer-events: none