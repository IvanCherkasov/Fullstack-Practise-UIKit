.uikit-toggle
	position relative
	display flex
	background-color var(--color-1)
	transition background-color 0.2s

	.left-dummy
		position absolute
		width 24px
		height 24px
		background-color var(--color-1)
		border-radius 50%
		transition background-color 0.2s

	.right-dummy
		position absolute
		width 24px
		height 24px
		background-color var(--color-1)
		border-radius 50%
		transition background-color 0.2s

	.text-left
		display flex
		position absolute
		color white
		font-family Lato
		font-weight bold
		font-size 12px
		transition opacity 0.2s
		z-index 1
		cursor default

	.text-right
		display flex
		position absolute
		color white
		font-family Lato
		font-weight bold
		font-size 12px
		transition opacity 0.2s
		z-index 1
		cursor default

.uikit-toggle[text-enabled="false"] .text-right
	display none

.uikit-toggle[text-enabled="false"] .text-left
	display none

.uikit-toggle.vertical
	height 36px
	width 24px
	justify-content center
	margin 12px 0

	.left-dummy
		top -12px

	.right-dummy
		bottom -12px

	.text-left
		display none

	.text-right
		display none

.uikit-toggle.horizontal
	height 24px
	width 36px
	align-items center
	margin 0 12px

	.left-dummy
		left -12px

	.right-dummy
		right -12px

	.text-left
		left 0
		height 24px
		align-items center

	.text-right
		right 0
		height 24px
		align-items center


.uikit-toggle.checked
	background-color var(--color-1)

.uikit-toggle:not(.checked)
	background-color #e5e5e5

.uikit-toggle.checked
	.left-dummy
		background-color var(--color-1)

	.right-dummy
		background-color var(--color-1)

.uikit-toggle:not(.checked)
	.left-dummy
		background-color #e5e5e5

	.right-dummy
		background-color #e5e5e5

.uikit-toggle.checked
	.text-left
		opacity 1

	.text-right
		opacity 0

.uikit-toggle:not(.checked)
	.text-left
		opacity 0

	.text-right
		opacity 1
