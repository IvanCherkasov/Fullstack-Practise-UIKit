.uikit-theme-sea
    .uikit
        &.uikit-stages
            .uikit-stages-track
                background-color #e5e5e5

            &[data-type="horizontal"]
                .uikit-stages-track
                    width inherit
                    height 5px

            &[data-type="vertical"]
                .uikit-stages-track
                    height inherit
                    width 5px
