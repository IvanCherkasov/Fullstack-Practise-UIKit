.ui-slider
	position relative
	width auto
	height auto
	margin 0 10px
	display flex
	flex-direction column
	justify-content center
	align-items center
	cursor pointer
	flex-grow 1
	flex-shrink 1
	flex-basis auto
	
	.ui-slider-track
		position relative
		width 100%
		display flex
		align-items center
		flex-grow 1
		flex-shrink 1
		flex-basis auto
		
		.ui-slider-thumb
			position relative
			width 21px
			height 21px
			background-color #e75735
			border-radius 50%
			left 0
			display flex
			justify-content center
			align-items start
			
			.ui-slider-thumb-upper
				position absolute
				height 23px
				border-radius 5px
				background-color #e75735
				bottom 31px
				display flex
				justify-content center
				align-items center
				flex-direction column
				pointer-events none
				opacity 0
				transition opacity 0.2s
				
				div
					color white
					font-family Lato
					font-size 13px
					font-weight bold
					text-align center
					padding 10px
					margin-top 3px

			.ui-slider-thumb-upper::before
				position absolute
				content ""
				width 7px
				height 7px
				background-color #e75735
				border-radius 0 0 2px 0
				transform rotate(45deg)
				bottom -3px
				right 0
				left 0
				margin auto
				
		.ui-slider-thumb.hover
			.ui-slider-thumb-upper
				opacity 1
				
		.ui-slider-track-upper
			position absolute
			height 21px
			bottom 23px
			left 100px
			pointer-events none
			border-radius 5px
			border 1px dashed #e75735
			display flex
			justify-content center
			align-items center
			flex-direction column
			background-color white
			opacity 0
			transition opacity 0.2s
			
			div
				color #e75735
				font-family Lato
				font-size 13px
				font-weight bold
				text-align center
				padding 10px
				margin-top 3px
				z-index 1
				
		.ui-slider-track-upper::before
			position absolute
			content ""
			height 7px
			width 7px
			background-color white
			border 1px dashed #e75735
			border-left none
			border-top none
			border-radius 0 0 2px 0
			transform rotate(45deg)
			bottom -4px
			z-index -1
			left 0
			right 0
			margin auto
			
		.ui-slider-track-upper::after
			position absolute
			content ""
			height 6px
			width 6px
			background-color white
			border-radius 0 0 2px 0
			transform rotate(45deg)
			bottom -3px
			left 0
			right 0
			margin auto
			
	.ui-slider-track-fill
		position absolute
		width 100%
		height 5px
		background-color #e5e5e5
		border-radius 3px
		overflow hidden
		
		.ui-slider-track-fill-left
			position relative
			height inherit
			width 50px
			background-color #e75735
			
	.ui-slider-track.hover
		.ui-slider-track-upper
			opacity 1
			
	.ui-slider-rule
		width 100%
		position relative
		margin-top 2px
		display flex
		justify-content space-between
		align-items center
		cursor default
			
		span
			position relative
			font-family Lato
			font-size 11px
			color #d1d1d1
			font-weight bold
			text-align center
			cursor pointer
			
		span:hover
			color #e75735